include "RecoEgamma/EgammaElectronProducers/data/pixelSeedConfiguration.cfi"

module electronPixelSeeds= ElectronPixelSeedProducer {
  PSet SeedConfiguration = {
        using electronPixelSeedConfiguration
# eta-phi-region
    PSet RegionPSet = {
        double ptMin = 1.5
        double originRadius = 0.2
        double originHalfLength = 15.0
        double deltaEtaRegion = 0.3
        double deltaPhiRegion = 0.7
        bool useZInVertex = true
        InputTag VertexProducer = pixelVertices
    }

    string TTRHBuilder = "WithTrackAngle"
    PSet OrderedHitsFactoryPSet = {
        string ComponentName = "StandardHitPairGenerator"
        string SeedingLayers = "MixedLayerPairs" #"PixelLayerPairs"
    }
  }

  InputTag barrelSuperClusters = correctedHybridSuperClusters
#  InputTag endcapSuperClusters = correctedEndcapSuperClustersWithPreshower
  InputTag endcapSuperClusters = multi5x5SuperClustersWithPreshower
}
